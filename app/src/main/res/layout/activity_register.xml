<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_match_match"
    android:background="@color/gray_f4"
    android:orientation="vertical">

    <View style="@style/status_view_style" />

    <RelativeLayout
        android:id="@+id/lin_top"
        style="@style/base_match_wrap">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/base_wrap_wrap"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/title"
            style="@style/base_wrap_wrap"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/blackText"
            android:textSize="@dimen/tv_title" />

    </RelativeLayout>

    <LinearLayout
        style="@style/base_match_match"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_60">

        <TextView
            style="@style/base_wrap_wrap"
            android:layout_marginLeft="@dimen/dp_50"
            android:text="手机号"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_descript" />

        <com.zxqy.xunilaidian.view.ForbidEmojiEditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/register_round_bg_gray"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/main_Color"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            style="@style/base_wrap_wrap"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:text="密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_descript" />

        <com.zxqy.xunilaidian.view.ForbidEmojiEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/register_round_bg_gray"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/main_Color"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:maxLength="11"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <TextView
            style="@style/base_wrap_wrap"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:text="确认密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_descript" />


        <com.zxqy.xunilaidian.view.ForbidEmojiEditText
            android:id="@+id/et_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/register_round_bg_gray"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/main_Color"
            android:hint="请再次输入密码"
            android:inputType="numberPassword"
            android:maxLength="11"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="14sp" />




        <com.zxqy.xunilaidian.view.PressedTextView
            android:id="@+id/tv_comit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/rect_main_5dp"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>