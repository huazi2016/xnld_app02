<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white_bg8"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_gravity="right"
        android:src="@mipmap/icon_delete_gray" />

    <TextView
        android:id="@+id/image"
       style="@style/base_wrap_wrap"
        android:layout_gravity="center"
        android:textSize="@dimen/tv_content"
        android:textColor="@color/blackText"
        android:layout_marginTop="@dimen/dp_5"
       android:text="温馨提示" />
<!--
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/dialog_img_dingwei" />-->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="需要开启此权限"
        android:textStyle="bold"
        android:textColor="@color/btn_red"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="需要开启此权限才能更好的为您服务哦！"
        android:textColor="@color/text_11"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/corner_red20"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:text="好的"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>