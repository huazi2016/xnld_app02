<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/base_match_wrap"
    android:background="@drawable/round_white_bg8"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center_horizontal"
        android:text="选择客服方式"
        android:textColor="#2e2e2e"
        android:textSize="18sp" />

    <LinearLayout
        style="@style/base_match_wrap"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_wechart"
            style="@style/base_0_wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_wechart"
                style="@style/base_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/wechart_icn" />

            <TextView
                android:id="@+id/tv_wechart_info"
                style="@style/base_wrap_wrap"
                android:layout_toRightOf="@+id/iv_wechart"
                android:text="微信客服"
                android:textColor="@color/text_10"
                android:textSize="@dimen/tv_remark" />

            <TextView
                android:id="@+id/tv_wechat"
                style="@style/base_wrap_wrap"
                android:layout_below="@+id/tv_wechart_info"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/iv_wechart"
                tools:text="18888888888"
                android:textColor="@color/text_11"
                android:textSize="@dimen/tv_small" />
        </RelativeLayout>

        <View
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="#666666" />

        <RelativeLayout
            android:id="@+id/rl_qq"
            style="@style/base_0_wrap"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_qq"
                style="@style/base_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/qq_icn" />

            <TextView
                android:id="@+id/tv_qq_info"
                style="@style/base_wrap_wrap"
                android:layout_toRightOf="@+id/iv_qq"
                android:text="QQ客服"
                android:textColor="@color/text_10"
                android:textSize="@dimen/tv_remark" />

            <TextView
                android:id="@+id/tv_qq"
                style="@style/base_wrap_wrap"
                android:layout_below="@+id/tv_qq_info"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/iv_qq"
                tools:text="1904367091"
                android:textColor="@color/text_11"
                android:textSize="@dimen/tv_small" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#666666" />


    <Button
        android:id="@+id/dialog_bt_dis"
        style="@style/base_match_wrap"
        android:background="@drawable/dialog_bt_cancle_bg"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_10"
        android:text="取消"
        android:textColor="#6d6d6d"
        android:textSize="18sp" />

</LinearLayout>
