<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    style="@style/base_match_match"
    android:background="@color/root_bg"
    android:orientation="vertical">

    <View
        style="@style/status_view_style"
        android:background="@color/title_color" />

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/base_match_wrap"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/base_wrap_wrap"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/back_whit" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/base_wrap_wrap"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="私密会员"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_content" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        style="@style/base_match_0"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearView"
            style="@style/base_match_match"
            android:orientation="vertical">


            <LinearLayout
                style="@style/base_match_wrap"
                android:background="@color/title_color"
                android:orientation="horizontal"
         >

                <LinearLayout style="@style/base_match_wrap"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_30"
                    >
                    <LinearLayout
                        style="@style/base_0_wrap"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/base_wrap_wrap"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="昵称"
                            android:textColor="@color/white"
                            android:textSize="@dimen/tv_second_title" />

                        <TextView
                            android:id="@+id/tv_end_date"
                            style="@style/base_wrap_wrap"
                            android:layout_below="@+id/tv_name"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="会员到期日:2020-11-19"
                            android:textColor="@color/e7e7e7"
                            android:textSize="@dimen/tv_remark" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp_15"
                        android:src="@mipmap/header" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                style="@style/base_match_wrap"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="-30dp"
                android:background="@color/white"
                cardview:cardCornerRadius="@dimen/dp_8"
                cardview:cardElevation="@dimen/dp_5">

                <LinearLayout
                    style="@style/base_match_wrap"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <LinearLayout
                        style="@style/base_match_wrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View style="@style/vertical_yellow_line_style" />

                        <TextView
                            style="@style/base_wrap_wrap"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_weight="1"
                            android:text="开通会员"
                            android:textColor="@color/blackText"
                            android:textSize="@dimen/tv_content" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_list"
                        style="@style/base_match_wrap"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pay"
                style="@style/base_match_wrap"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10"
                cardview:cardCornerRadius="@dimen/dp_8"
                cardview:cardElevation="@dimen/dp_5">

                <LinearLayout
                    style="@style/base_match_wrap"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <LinearLayout
                        style="@style/base_match_wrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View style="@style/vertical_yellow_line_style" />

                        <TextView
                            style="@style/base_wrap_wrap"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_weight="1"
                            android:text="专属会员立享特权"
                            android:textColor="@color/blackText"
                            android:textSize="@dimen/tv_content" />


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_privilege"
                        style="@style/base_match_wrap"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                style="@style/base_match_wrap"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_10"
                cardview:cardCornerRadius="@dimen/dp_8"
                cardview:cardElevation="@dimen/dp_5">

                <LinearLayout
                    style="@style/base_match_wrap"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <LinearLayout
                        style="@style/base_match_wrap"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View style="@style/vertical_yellow_line_style" />

                        <TextView
                            style="@style/base_wrap_wrap"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_weight="1"
                            android:text="请选择支付方式"
                            android:textColor="@color/blackText"
                            android:textSize="@dimen/tv_content" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_wechar_pay"
                            android:layout_marginLeft="20dp"
                            android:src="@mipmap/wechat_pay"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:layout_alignLeft="@+id/iv_wechar_pay"
                            android:text="微信支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.zxqy.xunilaidian.view.CircleCheckBox
                            android:id="@+id/check_wechat"
                            style="@style/mCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="true"
                            android:clickable="true"
                            app:checkedColor="@color/check_apy"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_ali_pay"
                            android:layout_marginLeft="20dp"
                            android:src="@mipmap/ali_pay"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:layout_alignLeft="@+id/iv_ali_pay"
                            android:text="支付宝支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.zxqy.xunilaidian.view.CircleCheckBox
                            android:id="@+id/check_ali"
                            style="@style/mCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:clickable="false"
                            app:checkedColor="@color/check_apy"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.zxqy.xunilaidian.view.PressedTextView
        android:id="@+id/tv_pay"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/rect_pay"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <!--<TextView
        style="@style/base_match_wrap"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/member_center_btn_val"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_10"
        android:text="确认支付"
        android:textColor="@color/blackText"
        android:textSize="@dimen/tv_second_title" />-->
</LinearLayout>