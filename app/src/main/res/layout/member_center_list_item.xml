<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    style="@style/base_match_wrap"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/vip_btn_selector"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        style="@style/base_wrap_wrap"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
          style="@style/base_wrap_wrap"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/base_wrap_wrap"
                android:text="年度会员"
                android:textColor="@color/blackText"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_xianshi"
                style="@style/base_wrap_wrap"
                android:layout_marginLeft="5dp"
                android:background="@drawable/vip_recommand_bg"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_2"
                android:text="限时"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_remark" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_remark"
            style="@style/base_wrap_wrap"
            android:layout_marginTop="5dp"
            android:text="365天，每日仅0.35元" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price"
        style="@style/base_wrap_wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:text="¥128"
        android:textColor="@color/recommand"
        android:textSize="20sp" />

</RelativeLayout>
