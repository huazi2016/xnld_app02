<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/base_match_match"
    android:orientation="vertical"
   >
    <View style="@style/status_view_style" />

    <RelativeLayout
        android:id="@+id/lin_top"
        style="@style/base_match_wrap">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/base_wrap_wrap"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/title"
            style="@style/base_wrap_wrap"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="@color/blackText"
            android:textSize="@dimen/tv_title" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
       style="@style/base_match_0">

        <Button
            android:id="@+id/tv_update"
           style="@style/base_wrap_wrap"
            android:layout_below="@+id/textView_free"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_above"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="检查更新"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="@string/app_name"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="免费版"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_version"
           style="@style/base_wrap_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="当前版本v1.0.0" />

      <!--  <TextView
            android:id="@+id/tv_qq"
            style="@style/base_wrap_wrap"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            tools:text="联系客服（QQ）：1533156402"
            android:textColor="@color/text_11"
            android:textSize="@dimen/tv_descript" />-->
    </RelativeLayout>



</LinearLayout>
